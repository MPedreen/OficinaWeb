@model IEnumerable<OficinaWeb.Models.Produto>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Produtos</h2>
        </div>
        <div class="col-6 text-right">
            <!-- Rota definida: ProdutosController > Create -->
            <a asp-controller="Produtos" asp-action="Create" class="btn btn-primary">Cadastrar Novo Produto</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Nome do Produto
                    </th>

                    <th>
                        Preço de Custo
                    </th>

                    <th>
                        Preço de Venda
                    </th>

                    <!--
                    <th>
                        Lucro
                    </th>
                    -->

                    <th>
                        Data de Cadastro
                    </th>

                    <th>
                        Descrição
                    </th>

                    <th>
                        Mudanças
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var produto in Model)
                {
                <tr>
                    <td width="25%">@produto.NomeProduto</td>
                    <td width="20%">@produto.PrecoCusto</td>
                    <td width="30%">@produto.PrecoVenda</td>
                    <!-- <td width="25%">//produto.Lucro</td> -->
                    <td width="25%">@produto.DataCadastro</td>
                    <td width="25%">@produto.Descricao</td>
                    <td width="25%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Produtos" asp-action="Update" asp-route-Id="@produto.Id" class="btn btn-primary mx-1">Editar</a> <!--botão azul-->
                            <a asp-controller="Produtos" asp-action="Delete" asp-route-Id="@produto.Id" class="btn btn-danger mx-1">Deletar</a> <!--botão vermelho-->
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Nenhum produto cadastrado até o momento.</p>
    }

</div>
