@model OficinaWeb.Models.Carro

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Cadastrar Novo Carro</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ModeloCarro"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Marca"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Placa"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="ModeloCarro" class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="Marca" class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="Placa" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Criar" />
                        </div>
                        <div class="col">
                            <a asp-controller="Carros" asp-action="List" class="btn btn-danger w-75">Voltar</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

