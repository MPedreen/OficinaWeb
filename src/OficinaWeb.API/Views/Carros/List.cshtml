@model IEnumerable<OficinaWeb.Models.CarroViewModel>


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Controle de Automóveis</h2>
        </div>
        <div class="col-6 text-right">
            <!-- Rota definida: CarrosController > Create -->
            <a asp-controller="Carros" asp-action="Create" class="btn btn-primary">Cadastrar Automóvel</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Modelo do Carro
                    </th>
                    <th>
                        Marca
                    </th>
                    <th>
                        Placa
                    </th>
                    <th>
                        Data de Cadastro
                    </th>
                    <th>
                        Mudanças
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var carro in Model)
                {
                    <tr>
                        <td width="25%">@carro.ModeloCarro</td>
                        <td width="25%">@carro.Marca</td>
                        <td width="25%">@carro.Placa</td>
                        <td width="25%">@carro.DataCadastro</td>
                        <td width="25%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Carros" asp-action="Update" asp-route-Id="@carro.Id"
                            class="btn btn-primary mx-1">Editar</a>
                                <!--botão azul-->
                        <a asp-controller="Carros" asp-action="Delete" asp-route-Id="@carro.Id"
                            class="btn btn-danger mx-1">Deletar</a>
                                <!--botão vermelho-->
                    </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Nenhum automóvel cadastrado até o momento.</p>
    }

</div>
