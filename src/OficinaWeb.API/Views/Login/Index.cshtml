@model OficinaWeb.Models.UserViewModel

@{
    Layout = null;
}
<link rel="stylesheet" href="~/css/login.css">

<section>
    <h1>Autenticação</h1>

    <form action="/Login" method="post">
        <input type="text" name="Email" value="@Model.Email" placeholder="Username/E-mail" />
        <input type="text" name="Senha" value="" placeholder="Senha" />
        <a href="#">Esqueceu a senha?</a>

        <button>Login</button>
    </form>

    <label>Não tem conta? <a href="#">Crie Aqui</a></label>
</section>
